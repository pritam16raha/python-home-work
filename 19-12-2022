with open("pritam.txt", "w") as file:
    file.write("good morning pritam currently doing mca ")
file= open ('pritam.txt','r+')
text=file.readlines()
file.close()
file2= open('pritam2.txt','w')
for i in text:
    file2.write(i)
file2.read(10)
file2.close()


